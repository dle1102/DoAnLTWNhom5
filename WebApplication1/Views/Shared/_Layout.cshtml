@using WebApplication1.Models
@{
    Layout = null;
    var title = ViewBag.Title ?? "GearZone";
    string vaiTro = Session["VaiTro"] as string;

    // Lấy giỏ hàng từ Session
    var gioHang = Session["GioHang"] as List<GioHang>;

    // Tính tổng số lượng
    int tongSoLuong = 0;
    if (gioHang != null)
    {
        tongSoLuong = gioHang.Sum(n => n.iSoLuong);
    }
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" />

    <style>
        /* --- CSS CHO HEADER MENU --- */

        /* 1. Nút Đăng nhập (Gradient Xanh Ngọc) */
        .btn-login-custom {
            background: linear-gradient(135deg, #2dd4bf 0%, #14b8a6 100%);
            color: #0f172a;
            font-weight: 700;
            padding: 8px 20px;
            border-radius: 20px;
            text-decoration: none;
            transition: 0.3s;
            border: none;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

            .btn-login-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(45, 212, 191, 0.4);
                color: #0f172a;
                text-decoration: none;
            }

        /* 2. User Menu Dropdown */
        .user-menu-container {
            position: relative;
            display: inline-block;
        }

        .user-toggle-btn {
            background: transparent;
            color: #fff;
            border: 1px solid #334155;
            padding: 8px 15px;
            border-radius: 20px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: 0.3s;
            text-decoration: none;
        }

            .user-toggle-btn:hover {
                border-color: #2dd4bf;
                background: rgba(34, 211, 238, 0.1);
                color: #fff;
            }

        .user-dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            top: 100%;
            margin-top: 10px;
            background-color: #1e293b;
            min-width: 220px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.5);
            border-radius: 12px;
            border: 1px solid #334155;
            z-index: 1000;
            overflow: visible;
            animation: fadeIn 0.2s ease;
        }

            .user-dropdown-content::before {
                content: "";
                position: absolute;
                top: -20px;
                left: 0;
                width: 100%;
                height: 20px;
                background: transparent;
                display: block;
            }

        .user-menu-container:hover .user-dropdown-content {
            display: block;
        }

        .user-dropdown-content a {
            color: #cbd5e1;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            font-size: 0.95rem;
            border-bottom: 1px solid #334155;
            transition: 0.2s;
        }

            .user-dropdown-content a:last-child {
                border-bottom: none;
            }

            .user-dropdown-content a:hover {
                background-color: #0f172a;
                color: #2dd4bf;
                padding-left: 20px;
            }

            .user-dropdown-content a.logout-btn:hover {
                color: #f43f5e;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* 3. Icon Giỏ hàng (Đã thêm position relative để sửa lỗi bay xa) */
        .cart-icon-custom {
            position: relative; /* QUAN TRỌNG: Giữ số lượng nằm trong khung này */
            color: #fff;
            font-size: 1.2rem;
            padding: 8px;
            border-radius: 50%;
            transition: 0.3s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border: 1px solid transparent;
        }

            .cart-icon-custom:hover {
                background: rgba(255,255,255,0.1);
                color: #2dd4bf;
            }

        /* Badge số lượng (Đã căn chỉnh lại vị trí) */
        .cart-badge-custom {
            position: absolute;
            top: -2px; /* Đẩy lên góc trên */
            right: -2px; /* Đẩy sang góc phải */

            background-color: #ef4444;
            color: white;
            font-size: 0.7rem;
            font-weight: 800;
            min-width: 18px;
            height: 18px;
            border-radius: 50%; /* Tròn hoàn hảo */

            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid #0f172a; /* Viền trùng màu nền header để tách biệt */
            box-shadow: 0 0 5px rgba(239, 68, 68, 0.8);
            z-index: 10;
        }
    </style>
</head>
<body>

    <header class="header">
        <div class="header__top">
            <div class="logo">
                <a href="@Url.Action("Index", "Banhang")" class="logo" style="text-decoration:none;">
                    <span style="color:#2dd4bf; font-weight:bold;">⚙️ Gear</span><span style="color:#fff;">Zone</span>
                </a>
            </div>

            <div class="search-box">
                <form action="@Url.Action("Search", "Banhang")" method="get" style="display: flex; width: 100%;">
                    <input type="text" name="keyword" placeholder="Tìm kiếm gear..." required />
                    <button type="submit"><i class="bi bi-search"></i></button>
                </form>
            </div>

            <div class="header__actions d-flex align-items-center gap-3">

              

                @if (Session["MaTK"] != null)
                {
                    <div class="user-menu-container">
                        <div class="user-toggle-btn">
                            <i class="bi bi-person-circle" style="font-size: 1.2rem;"></i>
                            <span style="max-width: 100px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">
                                @Session["HoTen"]
                            </span>
                            <i class="bi bi-chevron-down" style="font-size: 0.8rem;"></i>
                        </div>

                        <div class="user-dropdown-content">
                            @if (vaiTro == "admin" || vaiTro == "nhanvien")
                            {
                                <a href="@Url.Action("VeTrangQuanTri", "DangNhap")" class="">
                                    <i class="bi bi-clock-history me-2"></i> Trang Admin
                                </a>
                            }
                            @if (vaiTro != "admin" && vaiTro != "nhanvien")
                            {
                                <a href="@Url.Action("LichSuDonHang", "Banhang")">
                                    <i class="bi bi-clock-history me-2"></i> Lịch sử đơn hàng
                                </a>
                            }
                            <a href="@Url.Action("Info", "DangNhap")">
                                <i class="bi bi-gear me-2"></i> Cài đặt tài khoản
                            </a>
                            <a href="@Url.Action("Logout", "DangNhap")" class="logout-btn">
                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <a href="@Url.Action("Index", "DangNhap")" class="btn-login-custom">
                        <i class="bi bi-person-fill"></i> Đăng nhập
                    </a>
                }

                <a href="@Url.Action("GioHang", "GioHang")" class="cart-icon-custom text-decoration-none ms-2">
                    <i class="bi bi-cart3"></i>
                    @if (tongSoLuong > 0)
                    {
                        <span class="cart-badge-custom">
                            @tongSoLuong
                        </span>
                    }
                </a>

            </div>
        </div>
    </header>

    <main class="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer__grid">
            <div>
                <h4 style="color: #2dd4bf;">GearZone</h4>
                <p class="text-secondary">Chuyên cung cấp Gaming Gear chính hãng, chất lượng hàng đầu Việt Nam.</p>
                <p class="text-secondary mt-2"><i class="bi bi-geo-alt-fill me-2"></i>123 Đường ABC, Quận XYZ, TP.HCM</p>
            </div>
            <div>
                <h4>Hỗ trợ</h4>
                <ul class="list-unstyled">
                    <li class="mb-2"><a href="#" class="text-secondary text-decoration-none">Hướng dẫn mua hàng</a></li>
                    <li class="mb-2"><a href="#" class="text-secondary text-decoration-none">Chính sách bảo hành</a></li>
                    <li><a href="#" class="text-secondary text-decoration-none">Chính sách đổi trả</a></li>
                </ul>
            </div>
            <div>
                <h4>Liên hệ</h4>
                <ul class="list-unstyled text-secondary">
                    <li class="mb-2"><i class="bi bi-telephone-fill me-2"></i>0909 000 000</li>
                    <li class="mb-2"><i class="bi bi-envelope-fill me-2"></i>support@gearzone.vn</li>
                    <li>
                        <i class="bi bi-facebook me-2"></i>
                        <i class="bi bi-instagram me-2"></i>
                        <i class="bi bi-youtube"></i>
                    </li>
                </ul>
            </div>
        </div>

        <div class="footer__bottom text-center pt-3 mt-4 border-top border-secondary">
            <p class="text-secondary mb-0">© 2025 GearZone. All rights reserved.</p>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </footer>
</body>
</html>