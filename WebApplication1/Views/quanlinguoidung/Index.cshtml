@model IEnumerable<WebApplication1.TaiKhoan>
@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">

    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
        
        <h1 class="display-5 fw-bold mb-0">Thông Tin Người Dùng</h1>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Thông tin</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th class="text-end pe-4">Hoạt Động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var tk in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex flex-column">
                                        <span class="fw-semibold">@tk.HoTen</span>
                                        <small class="text-muted">@tk.TenDangNhap</small>
                                    </div>
                                </td>
                                <td>@tk.Email</td>
                                <td>
                                    <span class="badge bg-primary-subtle text-primary px-3 py-2 rounded-pill">
                                        @tk.VaiTro
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <a href="@Url.Action("Xoa", "QuanLiNguoiDung", new { id = tk.MaTK })"
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Bạn có chắc chắn muốn xóa tài khoản @tk.TenDangNhap ?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <i class="bi bi-people display-1 text-muted d-block mb-3"></i>
                                <h5 class="text-muted">Không có tài khoản nào</h5>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
