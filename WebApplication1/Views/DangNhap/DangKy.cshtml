
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- MAIN FORM REGISTER -->
<div class="container">
    <div class="login-container mt-4" style="width: 400px; margin:auto">
        <div class="card shadow-lg p-3">
            <h3 class="card-title text-center fw-bold text-primary mb-4">Đăng ký</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }

            @using (Html.BeginForm("XuLyDangKy", "DangNhap", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control" id="Email" required>
                </div>
                <div class="mb-3" style="margin-top:10px;">
                    <label for="MatKhau" class="form-label">Mật khẩu</label>
                    <input type="password" name="MatKhau" class="form-control" id="MatKhau" required>
                </div>
                <div class="mb-3" style="margin-top:10px;">
                    <label for="XacNhanMatKhau" class="form-label">Xác nhận mật khẩu</label>
                    <input type="password" name="XacNhanMatKhau" class="form-control" id="XacNhanMatKhau" required>
                </div>
                <div class="mb-3" style="margin-top:10px;">
                    <label for="HoTen" class="form-label">Họ tên</label>
                    <input type="text" name="HoTen" class="form-control" id="HoTen" required>
                </div>
                <div class="mb-3" style="margin-top:10px;">
                    <label for="SoDienThoai" class="form-label">Số điện thoại</label>
                    <input type="tel" name="SoDienThoai" class="form-control" id="SoDienThoai">
                </div>
                <div class="mb-3" style="margin-top:10px;">
                    <label for="DiaChi" class="form-label">Địa chỉ</label>
                    <input type="text" name="DiaChi" class="form-control" id="DiaChi">
                </div>
                <div class="mb-3">
                    <button type="submit" style="margin-top:20px; margin-left:130px;margin-bottom:20px;" class="btn btn-primary w-100 mb-3">ĐĂNG KÝ</button>
                    <p class="text-center">
                        Đã có tài khoản? <a href="@Url.Action("Index", "DangNhap")" class="text-decoration-none fw-bold">Đăng nhập ngay</a>
                    </p>
                </div>
            }
        </div>
    </div>
</div>

