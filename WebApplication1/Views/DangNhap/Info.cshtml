@model WebApplication1.TaiKhoan
@{
    ViewBag.Title = "Cài đặt tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .profile-container {
        max-width: 1000px;
        margin: 50px auto;
        padding: 0 15px;
        min-height: 80vh;
    }

    .profile-card {
        background-color: #1e293b;
        border: 1px solid #334155;
        border-radius: 12px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        height: 100%;
    }

    .card-title {
        color: #fff;
        font-weight: 700;
        margin-bottom: 25px;
        border-bottom: 1px solid #334155;
        padding-bottom: 15px;
        text-transform: uppercase;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
    }

        .card-title i {
            color: #22d3ee;
            font-size: 1.4rem;
            margin-right: 10px;
        }

    .form-label {
        color: #94a3b8;
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .form-control {
        background-color: #0f172a;
        border: 1px solid #334155;
        color: #e2e8f0;
        padding: 12px 15px;
        border-radius: 8px;
        transition: 0.3s;
    }

        .form-control:focus {
            background-color: #0f172a;
            border-color: #22d3ee;
            color: #fff;
            box-shadow: 0 0 0 3px rgba(34, 211, 238, 0.15);
        }

    /* Style cho nút bấm Gaming */
    .btn-gaming {
        display: block;
        width: 100%;
        padding: 12px;
        margin-top: 30px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        transition: all 0.3s ease;
        background: transparent;
        cursor: pointer;
    }

    .btn-save {
        color: #22d3ee;
        border: 2px solid #22d3ee;
    }

        .btn-save:hover {
            background: #22d3ee;
            color: #000;
            box-shadow: 0 0 20px rgba(34, 211, 238, 0.4);
            transform: translateY(-3px);
        }

    .btn-pass {
        color: #f43f5e;
        border: 2px solid #f43f5e;
    }

        .btn-pass:hover {
            background: #f43f5e;
            color: #fff;
            box-shadow: 0 0 20px rgba(244, 63, 94, 0.4);
            transform: translateY(-3px);
        }

    .alert-custom {
        padding: 12px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
    }

    .alert-success-custom {
        background: rgba(34, 197, 94, 0.1);
        color: #4ade80;
        border: 1px solid rgba(34, 197, 94, 0.3);
    }

    .alert-danger-custom {
        background: rgba(244, 63, 94, 0.1);
        color: #f43f5e;
        border: 1px solid rgba(244, 63, 94, 0.3);
    }
</style>

<div class="profile-container">
    <div class="row">
        <div class="col-lg-7 mb-4">
            <div class="profile-card">
                <div class="card-title">
                    <i class="bi bi-person-vcard"></i>
                    <span>Thông tin cá nhân</span>
                </div>

                @if (TempData["Success_Info"] != null)
                {
                    <div class="alert-custom alert-success-custom">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success_Info"]
                    </div>
                }

                @using (Html.BeginForm("CapNhatThongTin", "DangNhap", FormMethod.Post, new { novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Họ và tên</label>
                        <input type="text" name="HoTen" class="form-control" value="@Model.HoTen" required placeholder="Nhập họ tên của bạn" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="Email" class="form-control" value="@Model.Email" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Số điện thoại</label>
                        <input type="text" name="SoDienThoai" class="form-control" value="@(Model.SoDienThoai ?? "")" placeholder="Chưa cập nhật" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Địa chỉ nhận hàng mặc định</label>
                        <input type="text" name="DiaChi" class="form-control" value="@(Model.DiaChi ?? "")" placeholder="Nhập địa chỉ giao hàng" />
                    </div>

                    <button type="submit" class="btn-gaming btn-save">
                        <i class="bi bi-save me-2"></i> Lưu thông tin
                    </button>
                }
            </div>
        </div>

        <div class="col-lg-5 mb-4">
            <div class="profile-card">
                <div class="card-title">
                    <i class="bi bi-shield-lock"></i>
                    <span>Đổi mật khẩu</span>
                </div>

                @if (TempData["Success_Pass"] != null)
                {
                    <div class="alert-custom alert-success-custom">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success_Pass"]
                    </div>
                }
                @if (TempData["Error_Pass"] != null)
                {
                    <div class="alert-custom alert-danger-custom">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error_Pass"]
                    </div>
                }

                @using (Html.BeginForm("DoiMatKhau", "DangNhap", FormMethod.Post, new { novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Mật khẩu hiện tại</label>
                        <input type="password" name="MatKhauCu" class="form-control" required placeholder="••••••" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mật khẩu mới</label>
                        <input type="password" name="MatKhauMoi" class="form-control" required placeholder="••••••" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Xác nhận mật khẩu</label>
                        <input type="password" name="XacNhanMatKhau" class="form-control" required placeholder="••••••" />
                    </div>

                    <button type="submit" class="btn-gaming btn-pass">
                        <i class="bi bi-key-fill me-2"></i> Đổi mật khẩu
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>// Xóa TempData thông báo sau 5 giây
        document.addEventListener('DOMContentLoaded', function () {
            var alerts = document.querySelectorAll('.alert-custom');
            alerts.forEach(function (alert) {
                setTimeout(function () {
                    alert.style.transition = 'opacity 0.3s';
                    alert.style.opacity = '0';
                    setTimeout(function () {
                        alert.remove();
                    }, 300);
                }, 5000);
            });
        });</script>
}