@{
    ViewBag.Title = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .success-wrapper {
        min-height: 80vh;
        background-color: #0b0e14;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .success-card {
        background: #151a23;
        border: 1px solid #2a3441;
        padding: 50px;
        border-radius: 16px;
        text-align: center;
        max-width: 600px;
        width: 90%;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        position: relative;
        overflow: hidden;
    }

    /* Hiệu ứng nền glow nhẹ phía sau */
    .glow-bg {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(45, 212, 191, 0.05) 0%, transparent 60%);
        pointer-events: none;
    }

    .icon-circle {
        width: 100px;
        height: 100px;
        background: rgba(45, 212, 191, 0.1);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 30px;
        position: relative;
        z-index: 2;
    }

    .bi-check-lg {
        font-size: 4rem;
        color: #2dd4bf;
        filter: drop-shadow(0 0 10px rgba(45, 212, 191, 0.5));
    }

    .s-title {
        color: #fff;
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 15px;
        position: relative;
        z-index: 2;
    }

    .s-desc {
        color: #94a3b8;
        font-size: 1.1rem;
        margin-bottom: 40px;
        line-height: 1.6;
        position: relative;
        z-index: 2;
    }

    /* Nút chính: Tiếp tục mua sắm */
    .btn-home {
        background: #2dd4bf;
        color: #0f172a;
        font-weight: 800;
        padding: 12px 30px;
        border-radius: 50px;
        text-decoration: none;
        display: inline-block;
        transition: 0.3s;
        text-transform: uppercase;
        position: relative;
        z-index: 2;
        border: 2px solid #2dd4bf;
    }

    .btn-home:hover {
        background: #14b8a6;
        border-color: #14b8a6;
        box-shadow: 0 0 20px rgba(45, 212, 191, 0.4);
        color: #0f172a;
    }

    /* Nút phụ: Theo dõi đơn hàng */
    .btn-track {
        background: transparent;
        color: #fff;
        font-weight: 700;
        padding: 12px 30px;
        border-radius: 50px;
        text-decoration: none;
        display: inline-block;
        transition: 0.3s;
        text-transform: uppercase;
        position: relative;
        z-index: 2;
        border: 2px solid #475569;
    }

    .btn-track:hover {
        border-color: #2dd4bf;
        color: #2dd4bf;
        background: rgba(45, 212, 191, 0.05);
    }
</style>

<div class="success-wrapper">
    <div class="success-card">
        <div class="glow-bg"></div>

        <div class="icon-circle">
            <i class="bi bi-check-lg"></i>
        </div>

        <h1 class="s-title">ĐẶT HÀNG THÀNH CÔNG!</h1>
        <p class="s-desc">
            Cảm ơn bạn đã tin tưởng GearZone.<br>
            Đơn hàng của bạn đã được tiếp nhận và đang được xử lý thần tốc!
        </p>

        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="@Url.Action("Index", "Banhang")" class="btn-home">
                <i class="bi bi-cart-plus me-2"></i>Tiếp tục mua
            </a>
        </div>
    </div>
</div>