@model WebApplication1.Models.SP
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Điều chỉnh: col-lg-11 offset-lg-1 để đẩy sát vào và rộng hơn -->
        <div class="col-lg-11 offset-lg-1 col-xl-10 offset-xl-1">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Thêm Sản Phẩm Mới</h4>
                </div>
                <div class="card-body p-4 p-md-5">
                    @using (Html.BeginForm("Themsp", "ThemSP", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = "" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger rounded mb-4" })

                        <div class="row g-4">
                            <!-- Tên Sản Phẩm -->
                            <div class="col-12">
                                <label class="form-label fw-bold">Tên Sản Phẩm</label>
                                @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên sản phẩm", required = "required" } })
                                @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                            </div>

                            <!-- Thể loại & Nhà cung cấp -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Thể Loại</label>
                                <select name="MaLoai" class="form-select" required>
                                    <option value="">-- Chọn thể loại sản phẩm --</option>
                                    @foreach (var tl in Model.ListLoai)
                                    {
                                        <option value="@tl.MaLoai" @(Model.MaLoai.HasValue && Model.MaLoai.Value == tl.MaLoai ? "selected" : "")>@tl.TenLoai</option>
                                    }
                                </select>
                                @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Nhà Cung Cấp</label>
                                <select name="MaNCC" class="form-select" required>
                                    <option value="">-- Chọn nhà cung cấp --</option>
                                    @foreach (var ncc in Model.ListNCC)
                                    {
                                        <option value="@ncc.MaNCC" @(Model.MaNCC.HasValue && Model.MaNCC.Value == ncc.MaNCC ? "selected" : "")>@ncc.TenNCC</option>
                                    }
                                </select>
                                @Html.ValidationMessageFor(model => model.MaNCC, "", new { @class = "text-danger" })
                            </div>

                            <!-- Giá Nhập & Giá Bán -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Giá Nhập</label>
                                @Html.EditorFor(model => model.GiaNhap, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0", step = "0.01", placeholder = "0.00" } })
                                @Html.ValidationMessageFor(model => model.GiaNhap, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Giá Bán</label>
                                @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0", step = "0.01", placeholder = "0.00" } })
                                @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
                            </div>

                            <!-- Số Lượng & Hình Ảnh -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Số Lượng</label>
                                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Hình Ảnh</label>
                                <input type="file" name="HinhAnh" class="form-control" accept="image/*" />
                            </div>

                            <!-- Mô Tả -->
                            <div class="col-12">
                                <label class="form-label fw-bold">Mô Tả</label>
                                @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", rows = "4", placeholder = "Nhập mô tả sản phẩm..." })
                                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                            </div>

                            <!-- Thông Số Kỹ Thuật -->
                            <div class="col-12">
                                <label class="form-label fw-bold">Thông Số Kỹ Thuật</label>
                                @Html.TextAreaFor(model => model.ThongSoKyThuat, new { @class = "form-control", rows = "6", placeholder = "Nhập thông số kỹ thuật..." })
                                @Html.ValidationMessageFor(model => model.ThongSoKyThuat, "", new { @class = "text-danger" })
                            </div>

                        
                           

                            <!-- Nút Submit -->
                            <div class="col-12 text-end mt-4">
                                <button type="submit" class="btn btn-success btn-lg px-5 py-3">
                                    <i class="fas fa-save me-2"></i>Thêm Sản Phẩm
                                </button>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer bg-light text-end">
                    @Html.ActionLink("« Quay Lại Danh Sách", "Index", null, new { @class = "btn btn-outline-secondary" })
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}